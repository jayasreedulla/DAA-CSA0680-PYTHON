def selection_sort(arr):
    n = len(arr)
    for i in range(n - 1):
        min_index = i
        for j in range(i + 1, n):
            if arr[j] < arr[min_index]:
                min_index = j
        arr[i], arr[min_index] = arr[min_index], arr[i]

def main():
    arr = [9, 8, 5, 2, 0, 1]
    selection_sort(arr)
    print("Sorted array in ascending order:")
    for num in arr:
        print(num, end=" ")

if __name__ == "__main__":
    main()
